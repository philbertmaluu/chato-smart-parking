{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Smart Parking System",
  "version": "1.1.0",
  "identifier": "com.smartparking.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Smart Parking System",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:3000 http://127.0.0.1:3000 http://192.168.0.112 http://127.0.0.1:8000 http://157.245.191.111 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' http: https: data: blob:; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 http://127.0.0.1:8000 http://157.245.191.111 http: https: ws: wss:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": [
          "English"
        ],
        "compression": "lzma"
      }
    },
    "publisher": "Smart Parking",
    "category": "Business",
    "shortDescription": "Smart Parking Management System v1.1.0",
    "longDescription": "A comprehensive parking management system"
  }
}
